<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".Fragments.Guardians_Fragment3">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:src="@drawable/bg1"
            android:scaleType="fitXY"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Guardian"
            android:layout_marginTop="70dp"
            android:layout_alignParentEnd="true"
            android:textSize="25dp"
            android:fontFamily="@font/roboto_bold"
            android:textColor="@color/white"
            android:layout_marginRight="40dp"/>
    </RelativeLayout>

    <com.google.android.material.tabs.TabLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tablayout2"
        app:tabTextColor="@color/pinkColor"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        app:tabIndicatorHeight="6dp"
        android:layout_marginTop="20dp"
        app:tabTextAppearance="@style/allCapsTabLayout"
        app:tabSelectedTextColor="@color/pinkColor"
        app:tabIndicatorColor="@color/pinkColor">

    </com.google.android.material.tabs.TabLayout>

    <androidx.viewpager.widget.ViewPager
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:id="@+id/viewPager2"/>

</LinearLayout>