<?xml version="1.0" encoding="utf-8"?>
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
    tools:context=".Fragments.Edit_Profile_Fragment_Google">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/bg2"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Welcome to My\nGuardian Angels !"
                    android:textColor="@color/white"
                    android:textSize="25dp"
                    android:layout_marginLeft="30dp"
                    android:fontFamily="@font/roboto_bold"
                    android:layout_marginTop="40dp"/>
            </RelativeLayout>
            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="You are only two step away from your profile !"
                android:textColor="#707070"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/roboto"
                android:textSize="15dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/pro_bg"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Evidence time period:"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="20dp"
                    android:textSize="14dp"
                    android:fontFamily="@font/roboto_bold"
                    android:textColor="@color/green"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Please select your length of time for evidence gathering:"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="20dp"
                    android:textSize="12dp"
                    android:fontFamily="@font/roboto"
                    android:textColor="@color/textColor"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/edittext_bg">
                    <Spinner
                        android:id="@+id/time_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:spinnerMode="dropdown"
                        android:entries="@array/time"
                        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck"/>
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="23dp"
                    android:text="Name"
                    android:textSize="14dp"
                    android:textColor="@color/green"
                    android:fontFamily="@font/roboto"/>
                <EditText
                    android:id="@+id/name_et"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:textSize="12dp"
                    android:textColorHint="@color/textColor"
                    android:padding="10dp"
                    android:inputType="textPersonName"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/edittext_bg"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:text="Phone"
                    android:textSize="14dp"
                    android:textColor="@color/green"
                    android:fontFamily="@font/roboto"/>
                <EditText
                    android:id="@+id/phone_et"
                    android:layout_width="match_parent"
                    android:textColorHint="@color/textColor"
                    android:textSize="12dp"
                    android:padding="10dp"
                    android:inputType="phone"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/edittext_bg"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:text="Eergency Phone"
                    android:textSize="14dp"
                    android:textColor="@color/green"
                    android:fontFamily="@font/roboto"/>
                <EditText
                    android:id="@+id/emergency_phne"
                    android:layout_width="match_parent"
                    android:textColorHint="@color/textColor"
                    android:textSize="12dp"
                    android:padding="10dp"
                    android:inputType="phone"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/edittext_bg"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:text="Dob"
                    android:textSize="14dp"
                    android:textColor="@color/green"
                    android:fontFamily="@font/roboto"/>
                <TextView
                    android:id="@+id/dob_tv"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/edittext_bg"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:padding="10dp"
                    android:textSize="14dp"
                    android:textColor="@color/textColor"
                    android:fontFamily="@font/roboto"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:text="Gender"
                    android:textSize="14dp"
                    android:textColor="@color/green"
                    android:fontFamily="@font/roboto"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/edittext_bg">
                    <Spinner
                        android:id="@+id/gender_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:entries="@array/gender"
                        android:spinnerMode="dropdown"
                        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck"/>
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:text="Address"
                    android:textSize="14dp"
                    android:textColor="@color/green"
                    android:fontFamily="@font/roboto"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/edittext_bg">
                    <Spinner
                        android:id="@+id/country_spin"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:spinnerMode="dropdown"
                        android:entries="@array/country_array"
                        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/edittext_bg">
                    <Spinner
                        android:id="@+id/city_spin"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:spinnerMode="dropdown"
                        android:entries="@array/city_array"
                        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck"/>
                </LinearLayout>

                <EditText
                    android:id="@+id/address_et"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:fontFamily="@font/roboto"
                    android:textColor="@color/textColor"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:textSize="12dp"
                    android:inputType="textPersonName"
                    android:textColorHint="@color/textColor"
                    android:background="@drawable/edittext_bg"
                    android:layout_marginBottom="50dp"
                    android:padding="10dp"/>






            </LinearLayout>
            <Button
                android:id="@+id/btn_save"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/btn_bg"
                android:layout_marginRight="70dp"
                android:layout_marginLeft="70dp"
                android:text="Proceed"
                android:textAllCaps="false"
                android:textSize="16dp"
                android:fontFamily="@font/roboto_bold"
                android:layout_marginTop="30dp"
                android:textColor="@color/white"
                android:layout_marginBottom="50dp"/>
        </LinearLayout>



    </ScrollView>